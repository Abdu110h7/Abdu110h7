<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/_1sdp"

        app:layout_constraintHeight_percent=".33"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:layout_width="match_parent"
                android:background="@drawable/shape"
                android:layout_height="match_parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView2"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_260sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:layout_width="wrap_content"
                android:text="Hello,James!"
                android:textSize="18sp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Let`s Start Exploring"
            android:textSize="18sp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_height="wrap_content"/>




    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_140sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".9">

        <TextView
               android:layout_width="wrap_content"
            android:text="Location"
            android:textSize="18sp"
            android:textColor="#807E7E"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_50sdp"
               android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_240sdp"
            app:cardCornerRadius="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_height="@dimen/_30sdp">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:text="! Badung.Ball,Indonisa"
                android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="Check-in"
            android:layout_marginTop="@dimen/_120sdp"
            android:textColor="#807E7E"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="@dimen/_160sdp"
            android:text="Check-out"
            android:layout_marginTop="@dimen/_120sdp"
            android:textColor="#807E7E"
            android:layout_height="wrap_content"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_100sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_150sdp"
            android:layout_height="@dimen/_30sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_35sdp"
                android:src="@drawable/baseline_calendar_today_24"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="10,Apr2023"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_100sdp"
            android:layout_marginStart="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_150sdp"
            android:layout_height="@dimen/_30sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_35sdp"
                android:src="@drawable/baseline_edit_calendar_24"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="12,Apr2023"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_240sdp"
            android:layout_marginTop="@dimen/_190sdp"
            app:cardCornerRadius="@dimen/_50sdp"
            android:backgroundTint="#4CD651"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_height="@dimen/_40sdp">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="Search"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>



    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        app:cardCornerRadius="@dimen/_50sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView"

        app:layout_constraintStart_toStartOf="@+id/materialCardView"
        app:layout_constraintTop_toTopOf="@+id/materialCardView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Hotel"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Villa"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_80sdp"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_80sdp"
                android:backgroundTint="#09DA12"
                app:cardCornerRadius="@dimen/_50sdp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="All"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_Reci"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView"
        tools:listitem="@layout/home" />


</androidx.constraintlayout.widget.ConstraintLayout>
